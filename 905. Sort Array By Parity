class Solution {
    public int[] sortArrayByParity(int[] arr) {
        int i = 0;
        int j = 0;
        while (i < arr.length) {
            if (arr[i] % 2 == 0) {
                int global = arr[i];
                for (int k = j; k < i; k++) {
                    int local = arr[k];
                    arr[k] = global;
                    global = local;
                }
                arr[i] = global;
                j++;
            }
            i++;


        }
        return arr;
    }
}
