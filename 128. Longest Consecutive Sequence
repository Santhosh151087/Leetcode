class Solution {
    public int longestConsecutive(int[] arr) {
       int len = arr.length;
       if(len == 0 || len==1)
       return len;
       HashSet<Integer>  set = new HashSet<>();
       for(int n : arr){
        set.add(n);
       }
       int max = 1;
       for(int n: set){
        int count  = 1;
            if(set.contains(n-1))
            continue;
            int t=1;
            while(set.contains(n+t)){
                t++;
                count++;
            }
            max  = Math.max(max, count);
       }
       return max;
    }
}
